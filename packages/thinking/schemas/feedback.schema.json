{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "feedback.schema.json",
  "type": "object",
  "required": ["run_id", "reviewer", "score_breakdown", "comments", "actions"],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "reviewer": { "type": "string", "minLength": 1 },
    "score_breakdown": {
      "type": "object",
      "additionalProperties": { "type": "number", "minimum": 0, "maximum": 100 }
    },
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["slide_id", "category", "text"],
        "properties": {
          "slide_id": { "type": "string" },
          "category": { "type": "string", "enum": ["logic", "density", "design", "evidence"] },
          "text": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    "actions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
