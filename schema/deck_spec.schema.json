{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DeckSpec",
  "type": "object",
  "required": ["client_meta", "slides"],
  "properties": {
    "client_meta": {
      "type": "object",
      "required": ["client_name", "industry", "date", "audience", "objective"],
      "properties": {
        "client_name": { "type": "string", "minLength": 1 },
        "industry": { "type": "string", "minLength": 1 },
        "date": { "type": "string", "minLength": 1 },
        "audience": { "type": "string", "minLength": 1 },
        "objective": { "type": "string", "minLength": 1 },
        "language": { "type": "string", "default": "ko" }
      },
      "additionalProperties": true
    },
    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sources_ref": {
      "type": "array",
      "items": { "type": "string" },
      "description": "References to items/sections in clients/<client>/sources.md"
    },
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["layout", "title", "governing_message"],
        "properties": {
          "layout": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "governing_message": { "type": "string", "minLength": 1 },
          "bullets": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "notes": { "type": "string", "default": "" },
          "visuals": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type"],
              "properties": {
                "type": { "type": "string" },
                "data_path": { "type": "string" },
                "caption": { "type": "string" }
              },
              "additionalProperties": true
            },
            "default": []
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
