      "font_weight": "Bold",
      "font_size": 18,
      "color": "primary"
    },
    "governing_message_zone": {
      "description": "Action Title의 근거 요약 — 12pt",
      "font_weight": "SemiBold",
      "font_size": 12,
      "color": "secondary"
    },
    "body_zone": {
      "description": "차트/표/텍스트 — 데이터가 Action Title을 증명",
      "font_size": 11,
      "color": "text"
    },
    "source_footer_zone": {
      "description": "출처 표기 — 8pt, 회색",
      "font_size": 8,
      "color": "source"
    }
  },
  "prohibited_elements": [
    "gradient_backgrounds",
    "decorative_icons",
